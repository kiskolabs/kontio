= form_for @forwarding do |f|
  -if @forwarding.errors.any?
    #error_explanation
      %h2= "#{pluralize(@forwarding.errors.count, "error")} prohibited this forwarding from being saved:"
      %ul
        - @forwarding.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :source
    = f.text_field :source
  .field
    = f.label :destination
    = f.text_area :destination
  .actions
    = f.submit 'Save'
